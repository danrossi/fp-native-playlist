.flowplayer

  .fp-playlist
      position: absolute
      right: 0.4em
      bottom: 3em
      width: 100%
      display: none
      text-align: center
      a
        background-color: #fff
        height: 0.8em
        border-radius: 50%
        width: 0.8em
        opacity: 0.7
        display: inline-block
        transition: transform 0.2s
        &:hover
          transform: scale(1.2, 1.2)
        &.is-active
          opacity: 1

  &.is-hovered, &.is-touched 
    .fp-playlist
      display: block

